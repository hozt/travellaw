---
import Logo from './Logo.astro';
import Navigation from './Navigation.astro';
import MenuTottgle from './MenuToggle.astro';

const { siteTitle, logoUrl, logoWidth, logoHeight, mobileLogoUrl, mobileLogoWidth, mobileLogoHeight } = Astro.props;

---
<div class="logo-wrapper logo-menu-default">
    <MenuTottgle />
    <Logo
        logoSourceUrl={logoUrl}
        mobileLogoSourceUrl={mobileLogoUrl}
        logoWidth={logoWidth}
        logoHeight={logoHeight}
        mobileWidth={mobileLogoWidth}
        mobileHeight={mobileLogoHeight}
        siteTitle={siteTitle}
    />
</div>
<nav id="main-nav" class="hidden md:block">
    <Navigation class="flex-wrap p-0 mx-auto list-none lg:flex main-menu md:justify-center" />
</nav>
