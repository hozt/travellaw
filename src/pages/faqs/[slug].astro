//   variables: { slug },
// });

const { data } = await client.query({
  query: GET_FAQ_TOPIC_BY_SLUG,
  variables: { slug },
});

const page = data?.faqTopic;

const faqTopicIds: number[] = [];
if (page?.faqTopicId) {
  faqTopicIds.push(page.faqTopicId);
}
